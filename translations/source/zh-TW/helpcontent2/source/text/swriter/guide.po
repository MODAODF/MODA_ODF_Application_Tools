msgctxt ""
"numbering_lines.xhp\n"
"hd_id3156241\n"
"help.text"
msgid "To Add Line Numbers to Specific Paragraphs"
msgstr "將行號加入特定段落"

#: numbering_lines.xhp
msgctxt ""
"numbering_lines.xhp\n"
"par_id3156264\n"
"help.text"
